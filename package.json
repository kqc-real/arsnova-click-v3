{
  "name": "arsnova-click-v3",
  "version": "0.1.0",
  "private": true,
  "description": "Ein modernes, 100 % DSGVO-konformes Audience-Response-System",
  "license": "MIT",
  "author": "Klaus Quibeldey-Cirkel",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "libs/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev -w @arsnova/backend\" \"npm run start -w @arsnova/frontend\"",
    "dev:backend": "npm run dev -w @arsnova/backend",
    "dev:frontend": "npm run start -w @arsnova/frontend",
    "dev:landing": "npm run dev -w @arsnova/landing",
    "build": "npm run build -w @arsnova/backend && npm run build -w @arsnova/frontend",
    "build:landing": "npm run build -w @arsnova/landing",
    "test": "npm run test -w @arsnova/backend",
    "lint": "eslint libs/ apps/ --no-warn-ignored",
    "format": "prettier --write \"**/*.{ts,js,json,html,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,css,scss,md}\"",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "concurrently": "^9.0.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "prettier": "^3.2.0",
    "prisma": "^7.4.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.56.0"
  },
  "dependencies": {
    "@prisma/client": "^7.4.0"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "tar": "^7.5.8"
  }
}
